{{ form_start(form) }}
{{ form_errors(form) }}

<div class="form-group">
{{ form_label(form.nom, 'Nom du plat') }}
{{ form_widget(form.nom, {'attr': {'placeholder': 'Ex: Riz espagnol', 'class': 'form-control'}}) }}
</div>

<div class="form-group">
{{ form_label(form.type, 'Type de plat') }}

{% for type in form.type %}
	<div class="radio">
		<label>
		    {{ form_widget(type, {'attr': {'class': 'with-gap'}}) }}
		    {{ form_label(type) }}
		</label>
	</div>
{% endfor %}

</div>


{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

{{ form_end(form) }}


